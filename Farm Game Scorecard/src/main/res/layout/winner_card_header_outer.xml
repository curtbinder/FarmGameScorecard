<!--This is the outer layout for the card header-->
<!--This file was copied from @res/values/base_header_layout from the library
    and then modified as indicated below-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    style="@style/card.header_compound_view">

    <!-- This is the Inner Content Header which you can populate runtime
         with setupInnerViewElements(android.view.ViewGroup, android.view.View) method in CardHeader class. -->
    <FrameLayout
        android:id="@+id/card_header_inner_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--The buttons are stripped out of this outer header layout.-->
    <!--Otherwise the header only fills up part of the card width.-->
    <!--This was created to allow for the header to fill the entire card width.-->
</RelativeLayout>